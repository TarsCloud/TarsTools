<idea-plugin>
  <id>com.tencent.jceplugin</id>
  <name>JCE Support</name>
  <version>0.1.0</version>
  <vendor email="harveyxu@tencent.com" url="http://www.tencent.com">Tencent</vendor>

  <description><![CDATA[
      This plugin supports the editing of the Jce file, providing the following features:
      <li>
            <ol>Syntax highlighting</ol>
            <ol>Code completion</ol>
            <ol>Format Code</ol>
            <ol>......</ol>
      <li>
      If any question, contract with harveyxu @ wechat work.
    ]]></description>

  <change-notes><![CDATA[
      v0.1.0 2019/01/03
      <li>
            <ol>Syntax highlighting</ol>
            <ol>Other features coming</ol>
      </li>
    ]]>
  </change-notes>

  <idea-version since-build="173.0"/>

  <depends>com.intellij.modules.lang</depends>

  <extensions defaultExtensionNs="com.intellij">
    <fileTypeFactory implementation="com.tencent.jceplugin.JceFileTypeFactory"/>
      <lang.parserDefinition language="Jce" implementationClass="com.tencent.jceplugin.JceParserDefinition"/>
      <lang.syntaxHighlighterFactory language="Jce" implementationClass="com.tencent.jceplugin.highlighting.JceSyntaxHighlighterFactory"/>
      <colorSettingsPage implementation="com.tencent.jceplugin.highlighting.JceColorSettingsPage"/>
  </extensions>

  <actions>
    <!-- Add your actions here -->
  </actions>

</idea-plugin>