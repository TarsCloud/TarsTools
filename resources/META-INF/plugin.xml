<idea-plugin>
    <id>com.tencent.jceplugin</id>
    <name>JCE Support</name>
    <version>0.2.0</version>
    <vendor email="harveyxu@tencent.com" url="http://www.tencent.com">Tencent</vendor>

    <description><![CDATA[
      <p>This plugin supports the editing of the Jce file, providing the following features:</p>
      <ol>
            <li>Syntax highlighting</li>
            <li>Code commenting</li>
            <li>Format Code</li>
            <li>......</li>
      </ol>
      <p>If any question, contract with harveyxu @ wechat work.</p>
    ]]>
    </description>

    <change-notes><![CDATA[
      <p>v0.2.0 2019/01/08</p>
      <ol>
            <li>Source code commenting</li>
            <li>Other features coming</li>
      </ol>
    ]]>
    </change-notes>

    <idea-version since-build="173.0"/>

    <depends>com.intellij.modules.lang</depends>

    <extensions defaultExtensionNs="com.intellij">
        <fileTypeFactory implementation="com.tencent.jceplugin.JceFileTypeFactory"/>
        <lang.parserDefinition language="Jce" implementationClass="com.tencent.jceplugin.JceParserDefinition"/>
        <lang.syntaxHighlighterFactory language="Jce"
                                       implementationClass="com.tencent.jceplugin.highlighting.JceSyntaxHighlighterFactory"/>
        <colorSettingsPage implementation="com.tencent.jceplugin.highlighting.JceColorSettingsPage"/>
        <lang.commenter language="Jce" implementationClass="com.tencent.jceplugin.JceCommenter"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>

</idea-plugin>